<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xir3n31.remidiuts.telkomschid.mynavigation.Main2Activity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:paddingTop="10dp"
        android:text="Choose Navigation"
        android:textAlignment="center"
        android:textSize="24sp"
        android:typeface="monospace"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="75dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:fontFamily="casual"
        android:onClick="nav1"
        android:paddingTop="10dp"
        android:text="Navigation 1"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="154dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:fontFamily="casual"
        android:onClick="nav2"
        android:text="Navigation 2"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="135dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:fontFamily="casual"
        android:onClick="nav3"
        android:text="Navigation 3"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_centerVertical="true"
        android:fontFamily="casual"
        android:onClick="nav4"
        android:text="Navigation 4"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="183dp" />

</LinearLayout>
